            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity 
            android:name=".ui.activity.UpdataUserdataBaseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"></activity>
