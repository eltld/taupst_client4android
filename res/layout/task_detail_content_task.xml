<?xml version="1.0" encoding="utf-8"?>
<!-- 标题，内容，报酬，截止时间，报名人数，报名 --> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:orientation="vertical"
	android:background="@drawable/common_layout_bg">
	
	<!-- 标题，内容 --> 
   	<TextView 
       	android:id="@+id/txt_task_detail_title"
       	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:textColor="@color/black"
		android:textSize="17sp"/>
	<include layout="@layout/task_detail_divider" />
	<TextView 
		android:id="@+id/txt_task_detail_content"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:textColor="@color/black"
		android:textSize="15sp"/>
	<include layout="@layout/task_detail_divider" />
	
	<!-- 报酬 --> 
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp">
	    <TextView 
	        android:id="@+id/txt_task_detail_reward_tmp"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center_vertical"
			android:text="@string/task_rewards"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:drawableLeft="@drawable/task_rewards_45"
			android:drawablePadding="10dp"/>
        <TextView 
	        android:id="@+id/txt_task_detail_rewards"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/txt_task_detail_reward_tmp"
			android:layout_marginLeft="10dp"	
			android:layout_marginRight="10dp"
			android:textStyle="bold"
			android:textColor="@color/gold"
			android:textSize="15sp"/>
	</RelativeLayout>
	
	<!-- 截止时间 --> 
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp">
	    <TextView 
	        android:id="@+id/txt_task_detail_endtime_pictrue"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center_vertical"
			android:text="@string/endtime"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:drawableLeft="@drawable/task_endtime_45"
			android:drawablePadding="10dp"/>
	    <TextView 
	        android:id="@+id/txt_task_detail_endtime"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/txt_task_detail_endtime_pictrue"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:textColor="@color/black"
			android:textSize="15sp"/>
	    <TextView 
            android:id="@+id/txt_task_detail_expired"
            android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textSize="15sp"
	        android:textColor="@color/black"
	        android:visibility="gone"/>
	</RelativeLayout>
	
	<!-- 报名人数，报名 --> 
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="10dp">
	    <TextView 
	        android:id="@+id/txt_task_detail_signup"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_centerVertical="true"
			android:gravity="center_vertical"
			android:text="@string/signup_count"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:drawableLeft="@drawable/task_signupcount_45"
			android:drawablePadding="10dp"/>
	    <TextView 
	        android:id="@+id/txt_task_detail_signupcount"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/txt_task_detail_signup"
			android:textColor="@color/black"
			android:textSize="15sp"/>
	    <FrameLayout 
	        android:id="@+id/layout_task_detail_frame"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true">
	        <Button 
		        android:id="@+id/btn_task_detail_signup"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:textSize="15sp"
		        android:textColor="@color/white"
		        android:background="@drawable/task_detail_btn_signup_bg"
		        android:visibility="gone"/>
	        <TextView 
	            android:id="@+id/txt_task_detail_multi"
	            android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:textSize="15sp"
		        android:textColor="@color/black"
		        android:visibility="gone"/>
	    </FrameLayout>   
	    <TextView 
	        android:id="@+id/txt_task_detail_end"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:layout_toLeftOf="@id/layout_task_detail_frame"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:visibility="gone"/>
	</RelativeLayout>
	<include layout="@layout/task_detail_divider" />
</LinearLayout>