<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/common_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_bg" >
        <Button
            android:id="@+id/btn_back_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_back_bg" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/write"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <Button 
			android:id="@+id/btn_ok_write"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="15dp"
			android:background="@drawable/btn_ok_bg"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp">
        <LinearLayout 
            android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:orientation="vertical">
            <EditText 
            	android:id="@+id/edit_write_title"
	            android:layout_width="match_parent" 
				android:layout_height="wrap_content"
				android:paddingLeft="15dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:maxLength="14"
				android:singleLine="true"
				android:textSize="18sp"
				android:hint="@string/write_task_title"
				android:textColorHint="@color/gray"
				android:background="@drawable/common_edit_bg"/>
            <EditText 
            	android:id="@+id/edit_write_content"
	            android:layout_width="match_parent" 
				android:layout_height="140dp"
				android:layout_marginTop="10dp"
				android:paddingLeft="15dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:gravity="top"
				android:maxLength="50"
				android:textSize="16sp"
				android:hint="@string/write_task_content"
				android:textColorHint="@color/gray"
				android:background="@drawable/common_edit_bg"/>
            <EditText 
            	android:id="@+id/edit_write_rewards"
	            android:layout_width="match_parent" 
				android:layout_height="80dp"
				android:layout_marginTop="10dp"
				android:paddingLeft="15dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:gravity="top"
				android:maxLength="20"
				android:textSize="16sp"
				android:hint="@string/write_task_rewards"
				android:textColorHint="@color/gray"
				android:background="@drawable/common_edit_bg"/>
        </LinearLayout>
        <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:layout_marginBottom="20dp">
            <ImageView 
                android:id="@+id/img_write_endtime"
                android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:src="@drawable/img_task_endtime_n"
				android:contentDescription="@string/hello_world"/>
		    <TextView 
		        android:id="@+id/txt_write_display_endtime"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/img_write_endtime"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:padding="10dp"
				android:hint="@string/write_endtime_hint"
				android:textColorHint="@color/gray"
				android:textColor="@color/black"
				android:textSize="18sp"
				android:background="@drawable/common_txt_bg"/>
		    <Button 
		        android:id="@+id/btn_write_endtime"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="10dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:text="@string/write_go"
		        android:textSize="16sp"
		        android:textColor="@color/white"
		        android:background="@drawable/task_detail_btn_signup_bg"/>
		</RelativeLayout>
    </LinearLayout>
</LinearLayout>
