<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/common_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_bg" >
        <Button
            android:id="@+id/btn_back_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_back_bg" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <ListView 
	        android:id="@+id/list_setting_user"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:divider="@color/white_divider"
	        android:dividerHeight="1dp"
	        android:background="@drawable/common_list_bg">
        
    	</ListView>
        <ListView 
	        android:id="@+id/list_setting_soft"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:divider="@color/white_divider"
	        android:dividerHeight="1dp"
	        android:background="@drawable/common_list_bg">
        
    	</ListView>
    	<Button 
	        android:id="@+id/btn_change_user"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:text="@string/change_user"
	        android:textSize="20sp"
	        android:textColor="@color/white"
	        android:background="@drawable/login_bg_btn_login"/>
    </LinearLayout>
</LinearLayout>
