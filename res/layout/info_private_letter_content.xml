<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginTop="10dp"
    android:background="@drawable/common_layout_bg">
    <!-- 内容，回复按钮 -->
	<RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp">
	    <TextView 
	        android:id="@+id/txt_info_private_letter_letter"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="70dp"
			android:textColor="@color/black"
			android:textSize="15sp"/>
	    <TextView 
	        android:id="@+id/txt_info_private_letter_reply"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/reply"
			android:textSize="13sp"
			android:textColor="@color/green"
			android:layout_alignParentRight="true"
			android:drawableRight="@drawable/icon_message"
			android:drawablePadding="8dp"
			android:clickable="true"
			android:background="@drawable/common_text_item_bg"/>
	</RelativeLayout>
</LinearLayout>
