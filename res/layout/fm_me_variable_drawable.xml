<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fm_me_bg_list_item">
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:text="@string/drawable"
    	android:textSize="16sp"
    	android:textColor="@color/black"
    	android:paddingLeft="15dp"/>
    <ImageView 
        android:id="@+id/img_fm_me_select"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_alignParentRight="true"
    	android:paddingRight="15dp"
    	android:src="@drawable/img_select"
    	android:contentDescription="@string/drawable"/>

    <ImageView
        android:id="@+id/img_fm_me_drawable"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/img_fm_me_select"
        android:contentDescription="@string/drawable"
        android:scaleType="fitXY" />

</RelativeLayout>