<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fm_me_bg_list_item">
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:text="@string/drawable"
    	android:textSize="18sp"
    	android:textColor="@color/black"
    	android:paddingLeft="15dp"/>
    <TextView 
	    android:id="@+id/txt_fm_me_drawable_temp"
	    android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <ImageView 
        android:id="@+id/img_fm_me_select"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toLeftOf="@id/txt_fm_me_drawable_temp"
    	android:src="@drawable/img_select"
    	android:contentDescription="@string/drawable"/>
    <ImageView 
        android:id="@+id/img_fm_me_drawable"
        android:layout_width="100dp"
    	android:layout_height="100dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
    	android:paddingTop="5dp"
    	android:paddingBottom="5dp"
    	android:adjustViewBounds="false"
    	android:scaleType="fitXY"
    	android:layout_toLeftOf="@id/img_fm_me_select"
    	android:contentDescription="@string/drawable"/>
</RelativeLayout>