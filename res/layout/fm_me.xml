<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:orientation="vertical" >
	    <ListView 
	        android:id="@+id/list_fm_me_variable"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:cacheColorHint="#00000000"
	        android:divider="@color/white_divider"
	        android:dividerHeight="1dp"
	        android:background="@drawable/common_list_bg">
	        
	    </ListView>
	    <ListView 
	        android:id="@+id/list_fm_me_base"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:cacheColorHint="#00000000"
	        android:divider="@color/white_divider"
	        android:dividerHeight="1dp"
	        android:background="@drawable/common_list_bg">
	        
	    </ListView>
	    <TextView 
	        android:id="@+id/txt_fm_me_setting"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:paddingLeft="15dp"
	    	android:paddingTop="10dp"
	    	android:paddingBottom="10dp"
	    	android:drawableRight="@drawable/img_select"
	    	android:paddingRight="15dp"
	        android:text="@string/setting"
	        android:textSize="18sp"
	        android:textColor="@color/black"
	        android:clickable="true"
	        android:visibility="gone"
	        android:background="@drawable/hp_bg_fm_me_txt"/>
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="50dp"/>
	</LinearLayout>
</ScrollView>