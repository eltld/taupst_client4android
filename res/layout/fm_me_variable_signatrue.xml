<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/fm_me_bg_list_item">
	    <TextView 
	        android:id="@+id/txt_variable_signatrue_tmp"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerVertical="true"
	    	android:text="@string/signatrue"
	    	android:textSize="18sp"
	    	android:textColor="@color/black"
	    	android:paddingLeft="15dp"
	    	android:paddingTop="10dp"
	    	android:paddingBottom="10dp"/>
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/txt_variable_signatrue_tmp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp">
	        <TextView 
		        android:id="@+id/txt_variable_signatrue"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:singleLine="true"
		    	android:ellipsize="end"
		    	android:text="@string/signatrue"
		    	android:textSize="18sp"
		    	android:textColor="@color/black"
		    	android:layout_alignParentRight="true"
		    	android:paddingRight="15dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:drawableRight="@drawable/img_select"
		    	android:drawablePadding="15dp"/>
	    </RelativeLayout>  
	</RelativeLayout>
</LinearLayout>