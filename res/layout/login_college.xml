<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg_college">
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/college"
    	android:textSize="20sp"
    	android:textColor="@color/black"
    	android:paddingLeft="15dp"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"/>
    <TextView 
        android:id="@+id/txt_college_name"
        android:background="@drawable/login_bg_collegename"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/go_select_college"
    	android:textSize="20sp"
    	android:textColor="@color/dimgray"
    	android:layout_alignParentRight="true"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:drawableRight="@drawable/img_select"
    	android:drawablePadding="15dp"/>
</RelativeLayout>
