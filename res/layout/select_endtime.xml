<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/common_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_bg" >
        <Button
            android:id="@+id/btn_back_selectendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_back_bg" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/select_endtime"
            android:textColor="@color/white"
            android:textSize="19sp" />
        <Button 
			android:id="@+id/btn_ok_selectendtime"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="15dp"
			android:background="@drawable/btn_ok_bg"/>
    </RelativeLayout> 
    <RelativeLayout 
        android:layout_width="match_parent" 
		android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerInParent="true">
            <DatePicker  
		        android:id="@+id/selectendtime_date"  
		        android:layout_width="wrap_content"  
		        android:layout_height="wrap_content"/>  
		    <TimePicker  
		        android:id="@+id/selectendtime_time"  
		        android:layout_width="wrap_content"  
		        android:layout_height="wrap_content"  
		        android:layout_marginTop="20dp"/>  
        </LinearLayout>
        <TextView 
            android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
